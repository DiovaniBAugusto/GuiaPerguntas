<%- include ('partials/header.ejs'); %>
<body>
    <%- include ("partials/navbar.ejs") %> 
    <div class="container">
        <br>
        <h1>perguntas:</h1>
        <hr>
        <a href="/pergunta" class="btn btn-success">Fazer uma Pergunta</a>
        <hr>
        <br>
        <% perguntas.forEach(obj => { %>
            <br>
            <div class="card">
                <div class="card-body">
                    <h3><%= obj.titulo %></h3>
                </div>
                <div class="card-footer">
                    <a href="/pergunta/<%= obj.id %>" class="btn btn-primary" >Responder</a>
                </div>
            </div>
           
           
            <br>
        <% }); %>
    </div>   
</body>
