<%- include ('partials/header.ejs'); %>
<body>
    <%- include ('partials/navbar.ejs'); %>
    <div class="container">
        <hr>
        <h1><%= pergunta.titulo%></h1>
        <p><%= pergunta.descricao%></p>
        <hr>
        
        <form method="POST" action="/salvarresposta">
            <label>Responda:</label>
            <textarea required="" placeholder="Escreva sua resposta" class="form-control" name="corpo"></textarea>
            <input type="text" placeholder="Autor" class="form-control" name="autor">
            <hr>
            <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
            <button type="submit" class="btn btn-success">Salvar Resposta</button>
        </form>
        <hr>
        <h3>Respostas:</h3>
        <hr>
        <% respostas.forEach(obj =>{ %>
            <br>
            <div class="card">
                <div class="card-header">
                    <%= obj.autor%>
                </div>
                <div class="card-body">
                    <%= obj.corpo%>
                </div>
            </div>
        <%  });%>

    </div>
</body>
<%- include ('partials/footer.ejs'); %>